<p id="notice"><%= notice %></p>

<h1>Services.... What are you looking for today? </h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Provider</th>
      <th>Name</th>
      <th>Category</th>
      <th>Description</th>
      <th>Minimum hours per booking </th>
      <th>Maximum hours per booking </th>
      <th>Point value per hour </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.user.name %></td>
        <td><%= service.name %></td>
        <td><%= service.category.name %></td>
        <td><%= service.description %></td>
        <td><%= service.duration_min %></td>
        <td><%= service.duration_max %></td>
        <td><%= service.point_value %></td>
        <td><%= link_to 'Show', service %></td>
        <% if user_signed_in? %>
          <% if current_user.id == service.user_id %>
            <td><%= link_to 'Edit', edit_service_path(service) %></td>
            <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>
